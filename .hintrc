{
    "extends": ["web-recommended"],
    "ignoredUrls": [
        {
            "domain": ".*\\.googleapis\\.com/.*",
            "hints": ["*"]
        },
        {
            "domain": ".*\\.googletagmanager\\.com/.*",
            "hints": ["*"]
        },
        {
            "domain": ".*\\.google-analytics\\.com/.*",
            "hints": ["*"]
        },
        {
            "domain": ".*\\.gstatic\\.com/.*",
            "hints": ["*"]
